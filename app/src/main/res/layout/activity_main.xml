<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

   <Button
       android:id="@+id/getFilesDirBtn"
       android:text="getFilesDir"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />

    <Button
        android:id="@+id/getCacheDirBtn"
        android:text="getCacheDirBtn"
        android:layout_below="@id/getFilesDirBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/externalPublicBtn"
        android:layout_below="@id/getCacheDirBtn"
        android:text="getExternalStoragePublicDirectory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/getExternalFilesDirBtn"
        android:layout_below="@id/externalPublicBtn"
        android:text="getExternalFilesDir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</RelativeLayout>
